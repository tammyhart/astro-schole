---
import Toggle from './Toggle'

const { heading } = Astro.props
---

<div class="interactive">
  <Toggle client:load heading={heading}><slot /></Toggle>
</div>

<style>
  .interactive {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2rem;
    padding: 2rem;

    background-color: var(--spark);
    border-left: 0.5rem solid var(--calm);
    color: var(--shade);

    h3 {
      color: var(--read-contrast)
    }

    button {
      display: flex;
      align-items: center;
      gap: 1rem;

      padding: 0.5rem 1rem;
      cursor: pointer;
      transition: 0.2s ease;

      background: var(--calm);
      border-radius: 0.25rem;
      font-weight: 600;
      color: var(--shade);

      &:not(:disabled):hover {
        background: var(--read-contrast);
        color: var(--spark);
      }

      &:disabled {
        background: var(--read);
      }
    }

    .content {
      grid-column: 1 / 3;
      grid-row: 2 / 3;

      opacity: 0;
      max-height: 0;
      overflow: hidden;
      transition: 1s ease-in-out;

      &.expanded {
        opacity: 1;
        max-height: 10rem;
        margin-top: 2rem;
      }
    }
  }
</style>