---
import { Image } from 'astro:assets'

const { author, cover, readingTime, wordCount } = Astro.props

const approxWordCount = Math.round(wordCount / 100) * 100
---

<figure>
    <ul>
        <li><b>Author</b> <span>{author}</span></li>
        <li><b>Reading Time</b> <span>{readingTime.min}&ndash;{readingTime.max} minutes</span></li>
        <li><b>Word Count</b> <span>~{approxWordCount} words</span></li>
    </ul>
    <Image loading="eager" src={cover.url} alt={cover.alt} width="1200" height="400" />
</figure>

<style>
    figure {
        position: relative;
        z-index: 500;

        width: 100vw;
        max-width: 75rem;

        img {
            object-fit: cover;
            max-height: 20rem;
        }

        box-shadow: 0 3rem 2rem -2rem rgba(0,0,0,0.5);
        outline: 0.0625rem solid var(--read-contrast);
        outline-offset: 0.5rem;

        &::before {
            content: "";

            position: absolute;
            inset: 0;
            z-index: 1;

            background: linear-gradient(to top, rgba(0,0,0,0.75), rgba(0,0,0,0.25));
        }

        @media (min-width: 75rem) {
            margin: 0 calc(var(--h-space) * -1);

            img {
                max-height: unset;
            }
        }
    }

    ul {
        position: absolute;
        left: 2rem;
        bottom: 2rem;
        z-index: 2;

        display: flex;
        flex-direction: column;
        gap: 1.5rem;

        color: var(--read-contrast);
        line-height: 1rem;

        li {
            display: flex;
            gap: 1rem;
            align-items: baseline;
        }

        b {
            text-transform: uppercase;
            font-size: 0.875rem;
            letter-spacing: 0.0625rem;
            opacity: 0.75;
        }

        span {
            font-size: 1.125rem;
        }

        @media (min-width: 50rem) {
            flex-direction: row;
            gap: 3rem;
        }
    }
</style>